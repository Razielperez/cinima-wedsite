
@model Cinema.viewModel.MovieViewModel
@using Cinema.Models


<link href="~/css/cart.css" rel="stylesheet" />
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:33%">Movie</th>
                <th style="width:13%">Category</th>
                <th style="width:7%">Price</th>
                <th style="width:14%" class="text-center">Age</th>
                <th style="width:0%" class="text-center">New price</th>
                <th style="width:10%"></th>
            </tr>
        </thead>
        <tbody>

            @foreach (Movie obj in Model.movies)
            {
            <tr>
                <td data-th="Movie">
                    <div class="row">
                        <div class="col-sm-2 hidden-xs"><img src="@obj.img" alt="..." class="img-responsive" /></div>
                        <div class="col-sm-10">
                            <h4 class="nomargin">@obj.name</h4>

                        </div>
                    </div>
                </td>
                <td data-th="Category">@obj.category</td>
                <td data-th="Price">
                    <p>@obj.price₪</p>
                </td>
                <td data-th="Age" class="text-center">@obj.age</td>
                <form style="display:inline" method="post" action="@Url.Action("changePrice", "Cinema",new {name=obj.name})">
                    <td data-th="New price" class="text-center"><input type="number" name="@obj.name" max="100" min="1" value="0" placeholder="new price"  /></td>
                    <td class="actions" data-th="">
                        <button class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></button>
                    </td>
                </form>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td><a href="~/Cinema/adminPage" class="btn btn-warning"><i class="fa fa-angle-left"></i> Go back?</a></td>
                <td colspan="2" class="hidden-xs"></td>

                <td class="hidden-xs text-center"></td>
            </tr>
        </tfoot>
    </table>

</div>

